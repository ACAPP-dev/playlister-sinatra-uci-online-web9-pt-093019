<h1>Create a New Song</h1>

<form action="/songs" method="POST">
    <p>Song Name: <input type="text" id="Name" name="song[name]"></p>

    <p>Artist Name: <input type="text" id="Artist Name" name="artist[name]"></p>

    <p>Genre:
        <% @genres.each do |genre| %>
            <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input>
        <% end %>
    <br>
    <br>
    <p><input type="submit" value="Create"></p>

</form>
